{
  "name": "@bcpros/bitcore-node",
  "description": "A blockchain indexing node with extended capabilities using bitcore",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "version": "9.0.12",
  "author": "Justin Langston <nitsujlangston@gmail.com>",
  "contributors": [
    "Justin Langston <nitsujlangston@gmail.com>",
    "Micah Riggan <micahriggan@gmail.com>",
    "Kenny Joseph <kajoseph2@msn.com>"
  ],
  "main": "build/src/server.js",
  "bin": "bin/start",
  "scripts": {
    "start": "pnpm run tsc && node build/src/server.js",
    "debug": "pnpm run tsc && node --trace-warnings --inspect build/src/server.js --DEBUG true",
    "clean": "rm -rf build",
    "build": "pnpm run tsc",
    "docs:build-html": "typedoc --out ./docs/html --tsconfig tsconfig.json ./src",
    "docs:build-json": "typedoc --json ./docs/json --tsconfig tsconfig.json ./src",
    "tsc": "pnpm run clean && tsc",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:ci": "pnpm run test",
    "test:ci:integration": "pnpm run test:integration",
    "repair:db": "pnpm run tsc && node ./build/test/verification/db-repair.js",
    "verify:rpc": "pnpm run tsc && node ./build/test/verification/rpc-verify.js",
    "verify:db": "pnpm run tsc && node ./build/test/verification/db-verify.js",
    "verify:headers": "pnpm run tsc && node ./build/test/verification/db-verify-headers.js",
    "resync": "pnpm run tsc && node ./build/test/verification/resync.js",
    "test:unit": "mocha build/test/unit/ --name '*.spec.js'",
    "test:integration": "mocha build/test/integration/ --name '*.spec.js'",
    "benchmark": "node build/test/benchmark/benchmark.js",
    "coverage": "nyc mocha build/test/**/*.spec.js",
    "api": "pnpm run tsc && node build/src/workers/api.js",
    "api:debug": "pnpm run tsc && node --inspect build/src/workers/api.js --DEBUG true",
    "api:cluster": "pnpm run tsc && node build/src/workers/api.js --CLUSTER true",
    "pruning": "pnpm run tsc && node build/src/workers/pruning.js --EXIT true",
    "p2p": "pnpm run tsc && node build/src/workers/p2p.js",
    "precommit": "pnpm run fix && pnpm run lint",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts'",
    "fix": "tslint --fix -c ../../tslint.json 'src/**/*.ts'",
    "test:scripts": "npx mocha scripts/test"
  },
  "nyc": {
    "reporter": [
      "html",
      "json",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "bitcore-node",
    "typescript",
    "bitcoin",
    "bitcoin-cash",
    "ethereum",
    "node"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/bn.js": "4.11.5",
    "@types/chai": "4.1.3",
    "@types/express": "4.17.21",
    "@types/lodash": "4.14.116",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.1",
    "@types/request": "2.47.0",
    "@types/sinon": "4.3.3",
    "@types/through2": "2.0.33",
    "axios": "0.21.1",
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "istanbul": "^0.4.5",
    "mocha": "11.1.0",
    "nyc": "^15.1.0",
    "sinon": "4.4.8",
    "supertest": "3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "5.7.3",
    "typescript-eslint-parser": "15.0.0"
  },
  "dependencies": {
    "@bcpros/bitcore-client": "workspace:*",
    "@bcpros/bitcore-lib": "workspace:*",
    "@bcpros/bitcore-lib-cash": "workspace:*",
    "@bcpros/bitcore-lib-doge": "workspace:*",
    "@bcpros/bitcore-lib-ltc": "workspace:*",
    "@bcpros/bitcore-lib-xec": "workspace:*",
    "@bcpros/bitcore-lib-xpi": "workspace:*",
    "@bcpros/bitcore-p2p": "workspace:*",
    "@bcpros/bitcore-p2p-cash": "workspace:*",
    "@bcpros/bitcore-p2p-doge": "workspace:*",
    "@bcpros/bitcore-p2p-xec": "workspace:*",
    "@bcpros/bitcore-p2p-xpi": "workspace:*",
    "@bcpros/bitcore-wallet-client": "workspace:*",
    "@bcpros/crypto-wallet-core": "workspace:*",
    "abi-decoder": "2.4.0",
    "cors": "2.8.4",
    "crypto-rpc": "https://github.com/bitpay/crypto-rpc.git#370b201c98f4616b378290dc30486df5c1c769e0",
    "express": "4.19.2",
    "lodash": "4.17.11",
    "mongodb-legacy": "^4.0.2",
    "request": "2.88.0",
    "secp256k1": "4.0.3",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "source-map-support": "^0.5.13",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.5"
  },
  "gitHead": "169e28b0b13c25c386faccf38a2fdc4e1275a5db"
}
