#!/bin/sh

MODULES='bitcore-build bitcore-lib bitcore-lib-cash bitcore-mnemonic crypto-wallet-core bitcore-wallet-service 
  bitcore-wallet-client bitcore-client bitcore-lib-ltc bitcore-lib-doge bitcore-lib-xpi bitcore-lib-xec 
  bitcore-p2p bitcore-p2p-cash bitcore-p2p-xec bitcore-p2p-xpi bitcore-p2p-doge'

for i in $MODULES; 
do
  echo "## $i"
  cd $i && npm run compile || (echo "ERROR" && exit) && cd ..
done
